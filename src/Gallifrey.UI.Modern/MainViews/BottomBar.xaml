<UserControl x:Class="Gallifrey.UI.Modern.MainViews.BottomBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DockPanel HorizontalAlignment="Stretch" Background="{DynamicResource MahApps.Brushes.Accent}">
        <TextBlock Foreground="{DynamicResource MahApps.Brushes.IdealForeground}" Margin="5,0,0,0" VerticalAlignment="Center">
                Contact Us By <Hyperlink NavigateUri="mailto:gallifrey@blyth.me.uk?subject=Gallifrey App Contact" Foreground="{DynamicResource MahApps.Brushes.IdealForeground}" RequestNavigate="Hyperlink_RequestNavigate">E-Mail</Hyperlink> Or Raise A Bug On <Hyperlink NavigateUri="https://github.com/BlythMeister/Gallifrey" Foreground="{DynamicResource MahApps.Brushes.IdealForeground}" RequestNavigate="Hyperlink_RequestNavigate">GitHub</Hyperlink>.
        </TextBlock>
        <TextBlock HorizontalAlignment="Right" Margin="0,0,5,0" Foreground="{DynamicResource MahApps.Brushes.IdealForeground}" VerticalAlignment="Center">
            Please Help Support Gallifrey By <Hyperlink NavigateUri="https://www.blyth.me.uk/donations" Foreground="{DynamicResource MahApps.Brushes.IdealForeground}" RequestNavigate="Hyperlink_RequestNavigate">Donating</Hyperlink>
        </TextBlock>
    </DockPanel>
</UserControl>
